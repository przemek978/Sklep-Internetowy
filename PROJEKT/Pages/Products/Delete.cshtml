@page
@model PROJEKT.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Usuwam Produktu";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h2 align="center">Usuwanie Produktu</h2>
    <h3 align="center">Czy napewno chcesz usunąć poniższy produkt?</h3>
    <div style="font-size: 28px">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.price) zł
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.opis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.opis)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Product.id" />
            <input type="submit" value="Tak, usuń" class="btn btn-danger button4" />
            <a asp-page="./Index" class="btn button button4">Powrót do listy</a>
        </form>
    </div>
</body>
</html>