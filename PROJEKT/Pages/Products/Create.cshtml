@page
@model PROJEKT.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Dodawanie produktu - ";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
   
</head>
<body>
    <h2 align="center">Nowy produkt</h2>
    <hr />
    <div class="row" style="font-size: 28px" align="center">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product.name" class="control-label"></label>
                    <input asp-for="Product.name" class="form-control" />
                    <span asp-validation-for="Product.name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.price" class="control-label"></label>
                    <input asp-for="Product.price" class="form-control"/>
                    <span asp-validation-for="Product.price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.opis" class="control-label"></label>
                    <input asp-for="Product.opis" class="form-control" />
                    <span asp-validation-for="Product.opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Kategorie:</label>
                    <select multiple class="form-control" asp-for="listID">
                        @if(Model.Categories!=null)
                        {
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.id">@item.shortName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Product.Categories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn button button4" />
                    <a asp-page="./Index"class="btn button button4">Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
