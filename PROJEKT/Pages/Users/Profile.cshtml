@page
@model PROJEKT.Pages.Users.ProfileModel
@{
     ViewData["Title"] = "Profil";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1 align="center">Profil @User.Identity.Name</h1>
    <hr />
    <div style="font-size: 28px">
        <div >
            <a>Zarzadzanie profilem:</a>
            <a class="btn button button2" asp-page="Edit" asp-route-id=@Model.user.id>Zmień dane</a>
            <a class="btn button button2" asp-page="ChangePass" asp-route-id=@Model.user.id>Zmien Haslo</a>
        </div>
        <div>
            <a>Twoje zamowienia</a></br>
            @foreach(var o in Model.MyOrders)
            {
                Model.licznik++;
                <a>@Model.licznik.</a>
                Model.ile_produktu = new int[Model.Products.Count + 1];
                for (int i = 0; i < o.produkty.Length; i++)
                {
                    Model.ile_produktu[o.produkty[i] - 48]++;
                }
                foreach(var p in Model.Products)
                {
                    if(Model.ile_produktu[p.id]!=0)
                    {
                            @Model.ile_produktu[p.id]<a>x</a> 
                            @Html.DisplayFor(modelItem => p.name) 
                    }
                    <a>  </a>
                }
                <br/>
            }
        </div>
    </div>
</body>
</html>