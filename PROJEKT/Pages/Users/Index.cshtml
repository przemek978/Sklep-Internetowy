@page
@model PROJEKT.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Użytkownicy";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1 align="center">UŻYTKOWNICY</h1>
    <hr />
    <table class="table" style="font-size: 16px" align="center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].userName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.types[0].name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].isActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Users) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td style="max-width: 100 px">
                    @foreach(var t in Model.types)
                    {
                        if(t.id==item.typeID)
                        {
                            @Html.DisplayFor(modelItem => t.name)
                        }
                    }
                </td>
                <td>
                    @if(item.isActive==true)
                    {
                      <a>Aktywny</a>
                    }
                    else
                    {
                      <a>Nieaktywny</a>
                    }
                </td>
                <td>
                        @if(item.isActive==true)
                        {
                            <a class="btn button button2" asp-page="Ban" asp-route-id=@item.id>Banuj</a>
                        }
                        else
                        {
                          <a class="btn button button2" asp-page="Ban" asp-route-id=@item.id>Odbanuj</a>
                        }
                        <a class="btn button button2" asp-page="Edit" asp-route-id=@item.id>Edytuj</a>
                        <a class="btn button button2" asp-page="Delete" asp-route-id=@item.id>Usuń</a>
                        <a class="btn button button2" asp-page="ChangePass" asp-route-id=@item.id>Zmien Haslo</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</body>
</html>