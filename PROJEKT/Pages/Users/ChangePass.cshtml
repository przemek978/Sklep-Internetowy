@page
@model PROJEKT.Pages.Login.ChangePassModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
<h2 align="center">EDYCJA UŻYTKOWNIKA</h2>
<hr />
<div class="container" style="font-size: 28px" align="center">
    <form class="form-horizontal" method="post">
        <a class="text-danger" style="font-size: 16px" >@Html.Raw(Model.Message)</a>
        <div class="form-group">
            <input asp-for="user.userName" class="form-control" hidden>
        </div>
        <div class="form-group">
            <input asp-for="user.email" class="form-control" hidden>
        </div>
        <div class="form-group">
            <label asp-for="user.password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="user.password" class="form-control">
            </div>
            <span asp-validation-for="user.password" class="text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="password" class="form-control">
            </div>
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-group">
                <input type="submit" value="Zatwierdź" class="btn button button4" />
                <a asp-page="/Users/Index"class="btn button button4">Powrót do listy</a>
            </div>
        </div>
    </form>
</div>

</body>
</html>
