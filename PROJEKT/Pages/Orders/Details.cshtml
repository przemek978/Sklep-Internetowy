@model PROJEKT.Pages.Orders.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
   ViewData["Title"] = "Szczegóły Zamówienia";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h2 align="center">SZCZEGÓŁY ZAMÓWIENIA</h2>
    <hr />
    <input asp-for="Z.id" type="hidden" disabled/>
    <div style="font-size: 28px" align="center">
        <dl class="container">
            <dt>
                @Html.DisplayNameFor(model => model.user.userName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.user.userName)
            </dd>
            <dt >
                @Html.DisplayNameFor(model => model.Z.produkty)
            </dt>
            <dd>
                @foreach(var p in Model.products)
                {
                    if(Model.ile_produktu[p.id]!=0)
                    {
                            @Model.ile_produktu[p.id]<a>x</a> 
                            @Html.DisplayFor(modelItem => p.name)<br /> 
                    }
                }
            </dd>
        </dl>
        <a asp-page="./Edit" asp-route-id="@Model.Z.id"  class="btn button button4">Edytuj</a>
        <a asp-page="./Index"  class="btn button button4">Powrót do listy</a>
    </div>
</body>
</html>