@page
@model PROJEKT.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Szczegóły Kategorii - ";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>

</head>
<body>
    <h2 align="center">Szczegóły Kategorii</h2>
    <div style="font-size: 28px">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.shortName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.shortName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.longName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.longName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.opis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.opis)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.Products)
            </dt>
            <dd  class="col-sm-10">
                    @foreach(var p in Model.Category.Products)
                    {
                        @Html.DisplayFor(Model => p.Product.name)
                        <br/>
                    }
            </dd>
        </dl>
    </div>
    <div class="form-group">
        @if(Request.Cookies["UserLoginCookie"]!=null)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Category.id" class="btn button button4">Edytuj </a> 
        }
        <a asp-page="./Index" class="btn button button4" >Powrót do listy</a>
    </div>
</body>
</html>