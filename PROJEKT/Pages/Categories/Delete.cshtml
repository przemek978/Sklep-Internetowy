@page
@model PROJEKT.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Usuwam Kategorie";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>

</head>
<body>
    <h2>Usuwanie Kategorii</h2>
    <h3>Czy napewno chcesz usunąć poniższą kategorię?</h3>
    <div style="font-size: 28px">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.shortName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.shortName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.longName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.longName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.opis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.opis)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Category.id" />
            <input type="submit" value="Tak, usuń" class="btn btn-danger button4" />
           <a asp-page="./Index" class="btn button button4">Powrót do listy</a>
        </form>
    </div>
</body>
</html>
